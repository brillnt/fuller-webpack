{
  "name": "fuller-webpack-app",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "test": "jest",
    "build:prod": "webpack --env production",
    "build:dev": "webpack --env development",
    "build:shopify": "webpack --env shopify",
    "copy-assets:shopify": "node scripts/copy-assets.js",
    "watch:dev": "webpack --watch --env development",
    "module:new": "node scripts/create-module.js",
    "load": "node ./scripts/load-backup.js",
    "transform": "node ./scripts/transform.js",
    "load:transform": "npm run load -- --archive=buildfuller.webflow.zip && npm run transform",
    "watch:transform": "nodemon --watch site/archives/**/* --ext \"zip\" --exec \"npm run load:transform\""
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest.setup.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.css$": "jest-transform-css"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@brillnt/media-loader": "github:brillnt/media-loader",
    "adm-zip": "^0.5.16",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "chalk": "^5.3.0",
    "cheerio": "^1.0.0",
    "clean-css": "^5.3.2",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.3",
    "husky": "^9.1.6",
    "inquirer": "^9.2.10",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-css": "^6.0.2",
    "mini-css-extract-plugin": "^2.7.6",
    "nodemon": "^3.1.9",
    "postcss": "^8.5.1",
    "prettier": "^3.3.3",
    "terser": "^5.19.2",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "assert": "^2.1.0",
    "constants-browserify": "^1.0.0",
    "gsap": "^3.12.7",
    "path-browserify": "^1.0.1",
    "split-type": "^0.3.4",
    "stream-browserify": "^3.0.0",
    "ua-parser-js": "^2.0.2",
    "util": "^0.12.5"
  }
}
